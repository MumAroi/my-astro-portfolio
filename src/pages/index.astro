---
import PageLayout from "../layouts/BaseLayout.astro";
import Section from "../components/Section.astro";
import Card from "../components/Card.astro";
import Label from "../components/Label.astro";
import SkillLayout from "../components/SkillLayout.astro";

import { Image } from "astro:assets";
import paramas from "../assets/paramas.jpg";

const languages = ["TypeScript", "Python", "PHP", "HTML", "CSS", "Rust"];
const frontend = ["Next.js", "Nuxt.js", "Astro"];
const backend = ["Nest.js", "Laravel", "Express.js", "Django", "Flask"];
const database = ["Mysql", "Redis", "Mongodb", "Postgresql"];
const others = [
	"Docker",
	"Tailwind",
	"Git",
	"Github",
	"GitLab",
	"Jira",
	"Notion",
	"Figma",
	"Slack",
	"Google Cloud",
	"AWS",
	"Kubernetes",
];
---

<PageLayout meta={{ title: "Home" }}>
	<div class="flex w-full flex-col gap-y-10">
		<section class="flex flex-col items-center gap-y-7">
			<Image
				src={paramas}
				alt="profile photo"
				class="h-36 w-auto rounded-full bg-[#FFBE98] p-2"
				loading="eager"
			/>

			<div class="flex flex-col items-center gap-y-4">
				<h1 class="text-3xl font-bold">Paramas Waewsuwan</h1>
				<div class="flex flex-wrap justify-center gap-x-7 gap-y-3">
					<Label title="Fullstack Developer">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 24 24"
							class="h-5 w-5"
							slot="icon"
							><path
								fill="currentColor"
								d="M4.615 20q-.69 0-1.152-.462Q3 19.075 3 18.385v-9.77q0-.69.463-1.152Q3.925 7 4.615 7H9V5.615q0-.69.463-1.152Q9.925 4 10.615 4h2.77q.69 0 1.153.463q.462.462.462 1.152V7h4.385q.69 0 1.152.463q.463.462.463 1.152v9.77q0 .69-.462 1.152q-.463.463-1.153.463zm0-1h14.77q.23 0 .423-.192q.192-.193.192-.423v-9.77q0-.23-.192-.423Q19.615 8 19.385 8H4.615q-.23 0-.423.192Q4 8.385 4 8.615v9.77q0 .23.192.423q.193.192.423.192M10 7h4V5.615q0-.23-.192-.423Q13.615 5 13.385 5h-2.77q-.23 0-.423.192q-.192.193-.192.423zM4 19V8z"
							></path></svg
						>
					</Label>
					<Label title="Bangkok">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 24 24"
							class="h-5 w-5"
							slot="icon"
							><path
								fill="currentColor"
								d="M12.003 11.73q.668 0 1.14-.475q.472-.475.472-1.143t-.475-1.14q-.476-.472-1.143-.472t-1.14.476q-.472.475-.472 1.143t.475 1.14q.476.472 1.143.472M12 19.677q2.82-2.454 4.458-4.991q1.638-2.538 1.638-4.39q0-2.744-1.737-4.53T12 3.981q-2.621 0-4.359 1.785t-1.737 4.53q0 1.852 1.638 4.39q1.639 2.537 4.458 4.99m0 1.343q-3.525-3.117-5.31-5.814q-1.786-2.697-1.786-4.909q0-3.173 2.066-5.234Q9.037 3 12 3t5.03 2.062q2.066 2.061 2.066 5.234q0 2.212-1.785 4.909q-1.786 2.697-5.311 5.814m0-10.904"
							></path></svg
						>
					</Label>
					<Label
						title="Connect on Linkedin"
						as="a"
						href="https://www.linkedin.com/in/paramas-waewsuwan-398328223/"
						target="_blank"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 16 16"
							slot="icon"
							class="h-5 w-5 text-foreground/75"
							><path
								fill="currentColor"
								d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248c-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586c.173-.431.568-.878 1.232-.878c.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252c-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"
							></path></svg
						>
					</Label>
				</div>
			</div>
		</section>

		<Section title="About">
			<p class="text-muted-foreground">
				Experienced Full Stack Web Developer with proven expertise in
				designing and implementing scalable web applications in agile
				environments. Skilled in modern frontend and backend
				technologies, cloud platforms, and DevOps practices.
				Demonstrated ability to deliver high-performance, secure, and
				maintainable solutions across diverse technology stacks.
			</p>
		</Section>

		<Section title="Experience">
			<Card
				heading="Livinginsider"
				subheading="Senior Web Application Developer"
				date="Nov 2022 - Present"
				imagePath="/src/assets/turtle-astro-v2.png"
				altText="Livinginsider Card"
				imageClass="h-12 w-auto md:-left-16"
			>
				<ul class="ml-4 list-disc text-muted-foreground">
					<li>
						Develop back-end and front-end system, api service, log
						system and chat system with Vue.js, Next.js, Nuxt.js and
						Mongodb.
					</li>
				</ul>
			</Card>
			<Card
				heading="Movefast"
				subheading="Senior Web Application DeveloperSenior"
				date="Sep 2018 - Nov 2022"
				imagePath="/src/assets/turtle-astro-v2.png"
				altText="Movefast Card"
				imageClass="h-12 w-auto md:-left-16"
			>
				<ul class="ml-4 list-disc text-muted-foreground">
					<li>
						Develop and Monitor back-end system, api service, log
						system, grafana with php, laravel, elastic search,
						docker, gitlab, centos, GCE
					</li>
				</ul>
			</Card>
			<Card
				heading="Nilecon"
				subheading="Web Develop"
				date="Nov 2018 - Sep 2018"
				imagePath="/src/assets/turtle-astro-v2.png"
				altText="Nilecon Card"
				imageClass="h-12 w-auto md:-left-16"
			>
				<ul class="ml-4 list-disc text-muted-foreground">
					<li>
						Develop e-commerce web site, back-end system, and api
						service with docker, javascript, node, angularjs,
						typescript, php
					</li>
				</ul>
			</Card>
			<Card
				heading="JOBBKK"
				subheading="Web Programer"
				date="Jan 2016 - Nov 2018"
				imagePath="/src/assets/turtle-astro-v2.png"
				altText="JOBBKK Card"
				imageClass="h-12 w-auto md:-left-16"
			>
				<ul class="ml-4 list-disc text-muted-foreground">
					<li>
						Develop back-end system and hr system with php,
						codeigniter, javascript, html, css, jquery, mysql,
						linux, gitlab
					</li>
				</ul>
			</Card>
		</Section>

		<Section title="Education">
			<Card
				heading="Prince of Songkla University"
				subheading="Information Technology"
				date="2012 - 2015"
				imagePath="/src/assets/turtle-astro-v2.png"
				altText="PSU Card"
				imageClass="h-12 w-auto md:-left-16"
			>
				<ul class="ml-4 list-disc text-muted-foreground">
					<li>Bachelor's degree</li>
				</ul>
			</Card>
		</Section>

		<Section title="Certifications">
			<Card
				as="a"
				heading="Cloud Skills Boost Google"
				subheading="Learn Cloud Computing with Google Cloud"
				date="2022 - 2024"
				imagePath="/src/assets/turtle-astro-v2.png"
				altText="Cloud Skills Boost Google"
				imageClass="h-11 w-auto md:-left-16"
				href="https://www.cloudskillsboost.google/public_profiles/6aea05bf-82a9-46a8-b269-1a749126dbae"
			/>
			<Card
				as="a"
				heading="Data Pipeline with Arilfow"
				subheading="Learn Data Pipeline with Arilfow"
				date="2022"
				imagePath="/src/assets/turtle-astro-v2.png"
				altText="Data Pipeline with Arilfow"
				imageClass="h-11 w-auto md:-left-16"
				href="https://drive.google.com/file/d/1xvyUsjNWtPWsDcXKJ9jACISObZVypKU2/view?usp=sharing"
			/>
			<Card
				as="a"
				heading="Developing Application with Google Cloud"
				subheading="Learn Developing Application with Google Cloud"
				date="2020"
				imagePath="/src/assets/turtle-astro-v2.png"
				altText="Developing Application with Google Cloud"
				imageClass="h-11 w-auto md:-left-16"
				href="https://drive.google.com/file/d/1gw2lTk2OKBUS1_fFp27ggLfokdpLedxa/view?usp=sharing"
			/>
		</Section>

		<Section title="Skills">
			<SkillLayout title="Languages" skills={languages} />
			<SkillLayout title="Frontend" skills={frontend} />
			<SkillLayout title="Backend" skills={backend} />
			<SkillLayout title="Databse" skills={database} />
			<SkillLayout title="Others" skills={others} />
		</Section>
	</div>
</PageLayout>
